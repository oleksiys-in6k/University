       <!--</bean>-->


       <bean id="reader" class="university.MarkIO.reader.ConsoleMarkReader">
              <property name="studentDao" ref="studentDao"/>
              <property name="courseDao" ref="courseDao"/>
       </bean>

       <bean id="writer" class="university.MarkIO.writer.MarkWriterImpl">
              <property name="markDao" ref="markDao"/>
       </bean>


       <bean class="university.MarkIO.reader.ConsoleMarkReader">
              <property name="studentDao" ref="studentDao"/>
              <property name="courseDao" ref="courseDao"/>
       </bean>

       <bean id="facultyDao" class="university.dao.facultyDao.FacultyDaoImpl">
              <property name="sessionFactory" ref="sessionFactory"/>
       </bean>

       <bean id="studentDao" class="university.dao.studentDao.StudentDaoImpl">
              <property name="sessionFactory" ref="sessionFactory"/>
       </bean>

       <bean id="courseDao" class="university.dao.courseDao.CourseDaoImpl">
              <property name="sessionFactory" ref="sessionFactory"/>
       </bean>

       <bean id="markDao" class="university.dao.markDao.MarkDaoImpl">
              <property name="sessionFactory" ref="sessionFactory"/>
       </bean>

       <tx:annotation-driven proxy-target-class="true"/>

       <tx:annotation-driven/>
       <bean id="transactionManager" class="org.springframework.orm.hibernate4.HibernateTransactionManager">
              <property name="sessionFactory" ref="sessionFactory"/>
       </bean>

</beans>